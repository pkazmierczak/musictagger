[Unit]
Description=Librato - Automatic Music Library Organizer
Documentation=https://github.com/pkazmierczak/librato
After=network.target

[Service]
Type=simple
User=librato
Group=librato

# Security hardening
PrivateTmp=true
NoNewPrivileges=true
ProtectSystem=strict
ProtectHome=true
ReadWritePaths=/var/run/librato /mnt/music /mnt/incoming

# Runtime
PIDFile=/var/run/librato/librato.pid

# Command - all settings read from /etc/librato/config.json
ExecStart=/usr/bin/librato -daemon

# Restart policy
Restart=on-failure
RestartSec=10s

# Logging
StandardOutput=journal
StandardError=journal
SyslogIdentifier=librato

# Shutdown
TimeoutStopSec=30s
KillMode=mixed
KillSignal=SIGTERM

[Install]
WantedBy=multi-user.target
